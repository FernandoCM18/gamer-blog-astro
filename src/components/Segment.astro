  <button type="button"
    class="group inline-flex items-center justify-center whitespace-nowrap py-2 align-middle font-semibold transition-all duration-300 ease-in-out disabled:cursor-not-allowed stroke-blue-700 min-w-[32px] gap-1.5 text-xs disabled:stroke-slate-400 disabled:text-slate-400 hover:stroke-blue-950 hover:text-blue-950 h-7 text-slate-950 w-full rounded-md bg-white px-3 shadow sm:w-auto">
    <span>Todos</span>
  </button>
  <button type="button"
    class="group inline-flex items-center justify-center whitespace-nowrap rounded-lg py-2 align-middle font-semibold transition-all duration-300 ease-in-out disabled:cursor-not-allowed stroke-blue-700 min-w-[32px] gap-1.5 text-xs disabled:stroke-slate-400 disabled:text-slate-400 hover:stroke-blue-950 hover:text-blue-950 h-7 w-full bg-transparent px-3 text-slate-500 sm:w-auto">
    <span>Xbox</span>
  </button>
  <button type="button"
    class="group inline-flex items-center justify-center whitespace-nowrap rounded-lg py-2 align-middle font-semibold transition-all duration-300 ease-in-out disabled:cursor-not-allowed stroke-blue-700 min-w-[32px] gap-1.5 text-xs disabled:stroke-slate-400 disabled:text-slate-400 hover:stroke-blue-950 hover:text-blue-950 h-7 w-full bg-transparent px-3 text-slate-500 sm:w-auto">
    <span>Playstation</span>
  </button>
  <button type="button"
    class="group inline-flex items-center justify-center whitespace-nowrap rounded-lg py-2 align-middle font-semibold transition-all duration-300 ease-in-out disabled:cursor-not-allowed stroke-blue-700 min-w-[32px] gap-1.5 text-xs disabled:stroke-slate-400 disabled:text-slate-400 hover:stroke-blue-950 hover:text-blue-950 h-7 w-full bg-transparent px-3 text-slate-500 sm:w-auto">
    <span>Nintendo</span>
  </button>
  <button type="button"
    class="group inline-flex items-center justify-center whitespace-nowrap rounded-lg py-2 align-middle font-semibold transition-all duration-300 ease-in-out disabled:cursor-not-allowed stroke-blue-700 min-w-[32px] gap-1.5 text-xs disabled:stroke-slate-400 disabled:text-slate-400 hover:stroke-blue-950 hover:text-blue-950 h-7 w-full bg-transparent px-3 text-slate-500 sm:w-auto">
    <span>PC</span>
  </button>
</div>

<!-- Required JavaScript -->
<script>
  document.addEventListener("DOMContentLoaded", function() {
    const inactiveTabClassName = "bg-transparent";
    const activeTabClassName = "rounded-md bg-white shadow";

    // Datos para cada botón
    const data = {
    "Todos": "Datos para Todos",
    "Xbox": "Datos para Xbox",
    "Playstation": "Datos para Playstation",
    "Nintendo": "Datos para Nintendo",
    "PC": "Datos para PC"
  };

    const buttons = document.querySelectorAll('button');
    const displayElement = document.getElementById('display'); // Elemento donde se mostrarán los datos
    if (displayElement) {
      displayElement.textContent = data["Todos"];
    }
    
    buttons.forEach((button, index) => {
      button.addEventListener("click", function() {
        // Remove active styles from all buttons
        buttons.forEach((b) => {
          b.classList.remove(...activeTabClassName.split(/\s+/));
          b.classList.add(...inactiveTabClassName.split(/\s+/));
        });

        // Set the selected button as active
        button.classList.add(...activeTabClassName.split(/\s+/));
        button.classList.remove(...inactiveTabClassName.split(/\s+/));

        // Display the data for the clicked button
        const buttonText = button.textContent ? button.textContent.trim() : '';
        if (displayElement) {
          const data: {[key: string]: string} = {
            "Todos": "Datos para Todos",
            "Xbox": "Datos para Xbox",
            "Playstation": "Datos para Playstation",
            "Nintendo": "Datos para Nintendo",
            "PC": "Datos para PC"
          };

          displayElement.textContent = data[buttonText];
        }
      });
    });
  });
</script>