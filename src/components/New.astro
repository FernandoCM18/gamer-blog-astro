---
import Tag from "./Tag.astro";

interface Props {
  newTitle: string;
  createdAt?: string;
  author: string;
  newDescription: string;
  newImage: string;
}
const {newTitle, createdAt, author, newDescription, newImage } = Astro.props;
const date = new Date(String(createdAt)).toLocaleDateString('es-ES', {
  year: 'numeric',
  month: 'short',
  day: 'numeric'
});
---

<article class="bg-white dark:bg-slate-800 rounded-xl flex p-5 space-x-5 max-w-[430px] max-h-fit shadow-card">
  <img src={newImage} alt={newTitle} class="w-[137px] rounded-xl object-cover">
  <div>
    <Tag type="Noticia"/>
    <h2 class="font-bold line-clamp-2">{newTitle}</h2>
    <p class="text-xs text-slate-400 mb-3">Publicado: {date} - por {author}</p>
    <p class="line-clamp-5 text-sm">{newDescription}</p>
  </div>
</article>